<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SudokuGridStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">3</item>
        <item name="android:padding">@dimen/grid_padding</item>
        <item name="android:rowCount">3</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="SudokuCellStyle">
        <item name="android:background">#EDEFF6</item>
        <item name="android:layout_margin">@dimen/cell_margin</item>
        <item name="android:layout_width">@dimen/cell_size</item>
        <item name="android:layout_height">@dimen/cell_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item> <!-- Optional for some spacing inside the TextView -->
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#9198B5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <!--
        -->
    </style>

    <style name="FilledCellStyle">
        <item name="android:background">#D8DDF0</item> <!-- Light gray background -->
        <item name="android:layout_margin">@dimen/cell_margin</item>
        <item name="android:layout_width">@dimen/cell_size</item>
        <item name="android:layout_height">@dimen/cell_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item> <!-- Optional for some spacing inside the TextView -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#9198B5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#535C78</item>
    </style>

    <style name="EditButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#535C78</item>
    </style>

</resources>